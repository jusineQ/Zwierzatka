@model Zwierzatka.Models.Uzytkownik

@{
    ViewData["Title"] = "Home Page";
}

@if(ViewBag.IID==1){
    <p>"Podano zły login lub haslo, spróbuj ponownie "</p>
}

<form asp-action="index">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="nazwa" class="control-label"></label>
        <input asp-for="nazwa" class="form-control" />
        <span asp-validation-for="nazwa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="haslo" class="control-label"></label>
        <input asp-for="haslo" class="form-control"  type="password"/>
        <span asp-validation-for="haslo" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Zaloguj" class="btn btn-primary" />
    </div>
</form>






